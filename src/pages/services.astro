---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Services | ${SITE_TITLE}`} description="Professional HVAC services including installation, repair, maintenance, and emergency services for residential and commercial properties." />
	</head>
	<body>
		<Header />
		<main class="services-page">
			<!-- Hero Section -->
			<section class="hero">
				<div class="hero-content">
