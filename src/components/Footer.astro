<style>
	footer {
		background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
		color: white;
		padding: 4em 2em 2em;
		width: 100%;
	}
	
	.footer-content {
		max-width: 1400px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1.5fr;
		gap: 3em;
		padding-bottom: 3em;
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
	}
	
	.footer-section h3 {
		font-size: 1.8em;
		margin: 0 0 0.5em 0;
		color: white;
	}
	
	.footer-section h4 {
		font-size: 1.2em;
		margin: 0 0 1em 0;
		color: white;
		font-weight: 600;
	}
	
	.footer-section p {
		line-height: 1.6;
		opacity: 0.9;
		margin: 0 0 0.8em 0;
	}
	
	.tagline {
		font-weight: 600;
		opacity: 1 !important;
		margin-top: 1em;
	}
	
	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.footer-section ul li {
		margin-bottom: 0.7em;
		line-height: 1.6;
	}
	
	.footer-section ul li a {
		color: white;
		text-decoration: none;
		opacity: 0.9;
		transition: opacity 0.3s ease;
		display: inline-block;
	}
	
	.footer-section ul li a:hover {
		opacity: 1;
		text-decoration: underline;
	}
	
	.contact-list li {
		opacity: 0.9;
		line-height: 2;
	}
	
	.footer-bottom {
		max-width: 1400px;
		margin: 0 auto;
		text-align: center;
		padding-top: 2em;
	}
	
	.footer-bottom p {
		margin: 0.5em 0;
		opacity: 0.8;
		line-height: 1.6;
	}
	
	.license {
		font-size: 0.9em;
		opacity: 0.7 !important;
	}
	
	@media (max-width: 1024px) {
		.footer-content {
			grid-template-columns: repeat(2, 1fr);
			gap: 2.5em;
		}
	}
	
	@media (max-width: 768px) {
		footer {
			padding: 3em 1.5em 1.5em;
		}
		
		.footer-content {
			grid-template-columns: 1fr;
			gap: 2em;
			padding-bottom: 2em;
		}
		
		.footer-section {
			text-align: left;
		}
		
		.footer-section h3 {
			font-size: 1.5em;
		}
		
		.footer-section h4 {
			font-size: 1.1em;
		}
	}
</style>
